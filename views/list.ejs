<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh sach</title>
  </head>
  <body>
    <a href="/create">Thêm mới</a>
    <h1>Đây là trang danh sách</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Price</th>
          <th>Image</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <!-- forEach -->
        <!-- <% pros.forEach((p) => { %>
                <tr>
                    <td><%= p.id %></td>
                    <td><%= p.name %></td>
                    <td><%= p.price %></td>
                    <td><img src="<%=p.images%>" alt=""></td>
                </tr>
            <% }) %> -->
        <!-- for -->
        <% for(let p of pros) { %>
        <tr>
          <td><%= p.id %></td>
          <td><%= p.name %></td>
          <td><%= p.price %></td>
          <td>
            <img
              width="200"
              height="200"
              src="images/<%=p.image%>"
              alt="<%=p.image%>"
            />
          </td>
          <td>
            <a
              onclick="return confirm('Are you sure?')"
              href="/update/<%=p.id%>"
              >Update</a
            >
            <a
              onclick="return confirm('Are you sure?')"
              href="/delete/<%=p.id%>"
              >Delete</a
            >
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
